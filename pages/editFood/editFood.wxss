/* pages/editFood/editFood.wxss */
.edit-food{
  margin-top: 20rpx;
}
.change-modal{
  position: fixed;
  width: 100%;
  top: 20rpx;
  left:0;
  right:0;
  box-sizing: border-box;
  padding:20rpx;
  border: 1px solid #eee;
  color:#454545;
  font-size: 14px;
  background-color: #fff;
  z-index: 20;
  height: 100%
}
.change-modal>.desc{
  height: 80rpx;
  line-height: 80rpx;
  color: #454545;
  font-size: 16px;
}
.change-modal>textarea{
  padding: 20rpx;
  width: 100%;
  font-size: 16px;
  line-height: 20px;
  border: 1px dashed #eee;
  min-height: 180rpx;
  box-sizing: border-box;
}
.btn-group{
  width: 100%;
  height: 80rpx;
  text-align: right;
  margin-top:30rpx;
}
.btn-group>text{
  height: 40rpx;
  display: inline-block;
  width: 80rpx;
  margin-left: 20rpx;
  padding: 10rpx;
  line-height: 40rpx;
  font-size:16px;
  text-align: center;
  border-radius: 10rpx;
}
.primary{
  background-color: #f58220;
  color: #fff;
  border:1px solid #f58220;
}
.warn{
  background-color: #FFF;
  border: 1px solid #eee;
  color: #666;
}
/*
*输入容器
*/
.input-wrapper{
  position:fixed;
  width: 100%;
  height: 100%;
  top:0;
  left:0;
  z-index: 100;
  background-color: rgba(0,0,0,.5);
}
.input-wrapper>.input-content{
   position: absolute;
   box-sizing: border-box;
   bottom: 0;
   background-color: #fff;
   width: 100%;
   padding: 20rpx;
}
.input-wrapper>.input-content>input{
  display: block;
  box-sizing: border-box;
  border: 1px solid #f58220;
  border-radius: 20rpx;
  height: 60rpx;
  font-size: 16px;
  line-height: 60rpx;
  padding: 0 20rpx;
  color: #454545;
}
.sure-change{
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding-bottom:0 20rpx;
  text-align: right
}
.sure-change>text{
  display: inline-block;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f58220;
  color: #fff;
  font-size: 14px;
  border-radius: 8rpx;
}