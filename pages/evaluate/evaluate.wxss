/* pages/evaluate/evaluate.wxss */
.evaluate{
  width: 100%;
  height: 100%;
  background-color: #fff;
  font-size: 14px;
  color: #454545
}
.order{
  height: 80rpx;
  background-color: #eee;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 18px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-content: center;
}
.order-num{
  flex: 1
}
.order-status{
  color: #f58220;
  text-align: right
}
.foods{
  box-sizing: border-box;
  padding:40rpx;
}
.food-item{
  box-sizing: border-box;
  padding: 0 20rpx;
  border: 1px dashed #eee;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  margin-top: 20rpx;
}
.item-head{
  font-size: 16px;
  color: #f58220
}
.food-name{
  flex: 1
}
.food-evaluate{
  width: 120rpx;
  text-align: center
}
.order-evaluate{
  box-sizing: border-box;
  padding:20rpx 40rpx;
}
.order-evaluate>input{
  border: 1px solid #eee;
  box-sizing: border-box;
  padding: 0 10rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.evaluate-btn{
  box-sizing: border-box; 
  padding: 0 40rpx;
  text-align: right;
  margin-bottom: 30px;
}
.evaluate-btn>text{
  display: inline-block;
  margin-top: 20rpx;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  text-align: center;
  background-color: #f58220;
  margin-left: 20rpx;
}
.order-title{
  height: 60rpx;
  line-height: 60rpx;
}
.item-all{
  font-weight: 700;
}
.pic-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  align-content: flex-start;
}
.pic-img{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
}
.choose-pic{
  color: #f58220;
  text-decoration: underline;
}
.evaluate-text{
  border: 1px solid #eee;
  box-sizing: border-box;
  padding: 0 10rpx;
  width: 100%;
  line-height: 60rpx;
}
