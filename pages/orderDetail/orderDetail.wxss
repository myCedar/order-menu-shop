/* pages/orderDetail/orderDetail.wxss */
.order-detail{
  background-color: #fff;
  width: 100%;
  height: 100%;
  font-size: 14px;
  color: #454545;
}
.shop{
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
  border: 1px solid #eee;
  height: 100rpx;
  line-height: 100rpx;
}
.shop-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
}
.shop-name{
  font-size: 18px;
  flex: 1
}
.shop-table{
  width: 120rpx;
  text-align: right;
}
.food{
  box-sizing: border-box;
  padding: 20rpx;
}
.food-item{
  box-sizing: border-box;
  padding: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
  border-bottom: 1px solid #eee;
}
.food-item.food-head{
  border-bottom: none;
  background-color: #eee;
  font-weight: 500;
  font-size: 16px;
}
.food-item.footer{
  font-weight: 500;
  font-size: 16px;
  color: #f58220
}
.food-name{
  flex: 1
}
.food-num{
  width: 120rpx;  
  text-align:center;
}
.food-price{
  width: 150rpx;
  text-align: right  
}
.order-info{
  box-sizing: border-box;
  padding: 20rpx;
  margin-top: 40rpx;
  line-height: 60rpx;
}
.order-num{
  border: 1px solid #eee;
  box-sizing: border-box;
  padding: 20rpx;
}
.order-time{
  box-sizing: border-box;
  padding: 20rpx;
  border: 1px solid #eee;
  border-top: none;
}
.order-btn{
  box-sizing: border-box;
  padding: 20rpx;
  border-top: 1px solid #eee;
  text-align: right;
  height: 80rpx;
  margin-bottom: 30px;
}
.order-btn>text{
  display: inline-block;
  margin-top: 20rpx;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  text-align: center;
  background-color: #f58220;
  margin-left: 20rpx;
}
.order-btn>.cancel{
  color: #454545;
  background-color: #eee;
}