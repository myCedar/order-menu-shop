/* pages/table/table.wxss */
.set-table{
  margin-top: 20rpx;
}
/*
*输入容器
*/
.input-wrapper{
  position:fixed;
  width: 100%;
  height: 100%;
  top:0;
  left:0;
  z-index: 100;
  background-color: rgba(0,0,0,.5);
}
.input-wrapper>.input-content{
   position: absolute;
   box-sizing: border-box;
   bottom: 0;
   background-color: #fff;
   width: 100%;
   padding: 20rpx;
}
.input-wrapper>.input-content>input{
  display: block;
  box-sizing: border-box;
  border: 1px solid #f58220;
  border-radius: 20rpx;
  height: 60rpx;
  font-size: 16px;
  line-height: 60rpx;
  padding: 0 20rpx;
  color: #454545;
}
.sure-change{
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding-bottom:0 20rpx;
  text-align: right
}
.sure-change>text{
  display: inline-block;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f58220;
  color: #fff;
  font-size: 14px;
  border-radius: 8rpx;
}